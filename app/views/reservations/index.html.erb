<p id="notice"><%= notice %></p>

<h1>予約リスト</h1>

<table>
  <thead>
    <tr>
      <th>ユーザ</th>
      <th>商品</th>
      <th>返却予定日</th>
      <th>配送日</th>
      <th>配送先住所</th>
      <th>発送状態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.userId %></td>
        <td><%= reservation.clothesId %></td>
        <td><%= reservation.returnDay %></td>
        <td><%= reservation.sendDay %></td>
        <td><%= reservation.sendAdress %></td>
        <td><%= reservation.isSend %></td>
        <td><%= link_to '詳細', reservation %></td>
        <td><%= link_to '削除', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>