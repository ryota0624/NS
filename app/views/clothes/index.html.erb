<p id="notice"><%= notice %></p>

<h1>販売中の服一覧</h1>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>性別</th>
      <th>サイズ</th>
      <th>カラー</th>
      <th>カテゴリ1</th>
      <th>カテゴリ2</th>
      <th>State</th>
      <th>価格</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothes.each do |clothe| %>
      <tr>
        <td><%= clothe.name %></td>
        <td><%= clothe.sex %></td>
        <td><%= clothe.size %></td>
        <td><%= clothe.color %></td>
        <td><%= clothe.category1 %></td>
        <td><%= clothe.category2 %></td>
        <td><%= clothe.state %></td>
        <td><%= clothe.value %></td>
        <td><%= clothe.note %></td>
        <td><%= link_to '詳細', clothe %></td>
        <td><%= link_to '編集', edit_clothe_path(clothe) %></td>
        <td><%= link_to '削除', clothe, method: :delete, data: { confirm: '本当に消しますか?' } %></td>
        <td><%= link_to 'お勧め', recommend_clothe_path(clothe) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '商品追加', new_clothe_path %>
